<div class="min-h-screen flex flex-col">
  <!-- Header -->
  <header class="py-6 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <div class="text-2xl font-bold text-primary-600">FieldWork</div>
    </div>
  </header>

  <!-- Hero -->
  <main class="flex-1 flex items-center">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid lg:grid-cols-2 gap-12 items-center">

        <!-- Left: Content -->
        <div>
          <h1 class="text-4xl sm:text-5xl font-bold text-slate-900 leading-tight mb-6">
            Transform Projects into <span class="text-primary-600">Learning Experiences</span>
          </h1>
          <p class="text-xl text-slate-600 mb-8 leading-relaxed">
            FieldWork synthesizes employer projects, institutional standards, and student goals
            into personalized, credit-worthy experiential learning—grounded in learning science.
          </p>

          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4">
            <button @click="$store.app.setMode('demo')" class="btn-primary text-lg px-8 py-4">
              Start Demo
            </button>
            <button @click="$store.app.setMode('custom')" class="btn-secondary text-lg px-8 py-4">
              Build Custom Experience
            </button>
          </div>

          <p class="mt-6 text-sm text-slate-500">
            Demo mode uses pre-configured examples. Custom mode lets you enter your own data.
          </p>
        </div>

        <!-- Right: Synthesis Diagram -->
        <div class="hidden lg:block">
          <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-8">
            <h3 class="text-sm font-semibold text-slate-500 uppercase tracking-wide mb-6 text-center">Four-Way Synthesis</h3>

            <div class="relative">
              <!-- All four inputs in 2x2 grid -->
              <div class="grid grid-cols-2 gap-3">
                <div class="bg-primary-50 rounded-lg p-3 text-center border border-primary-100">
                  <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-1">
                    <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                  </div>
                  <div class="font-medium text-primary-900 text-xs">FieldWork Framework</div>
                </div>
                <div class="bg-emerald-50 rounded-lg p-3 text-center border border-emerald-100">
                  <div class="w-8 h-8 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-1">
                    <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                  </div>
                  <div class="font-medium text-emerald-900 text-xs">Institution Profile</div>
                </div>
                <div class="bg-amber-50 rounded-lg p-3 text-center border border-amber-100">
                  <div class="w-8 h-8 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-1">
                    <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div class="font-medium text-amber-900 text-xs">Employer Project</div>
                </div>
                <div class="bg-violet-50 rounded-lg p-3 text-center border border-violet-100">
                  <div class="w-8 h-8 bg-violet-100 rounded-full flex items-center justify-center mx-auto mb-1">
                    <svg class="w-4 h-4 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <div class="font-medium text-violet-900 text-xs">Student Profile</div>
                </div>
              </div>

              <!-- Converging arrows -->
              <div class="flex justify-center my-3">
                <svg class="w-8 h-8 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                </svg>
              </div>

              <!-- Center: Synthesis Engine -->
              <div class="bg-slate-800 rounded-xl p-4 text-center">
                <div class="text-white font-semibold">Synthesis Engine</div>
                <div class="text-slate-400 text-sm">AI-powered alignment</div>
              </div>

              <!-- Arrow down -->
              <div class="flex justify-center my-3">
                <svg class="w-8 h-8 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                </svg>
              </div>

              <!-- Output -->
              <div class="bg-gradient-to-r from-primary-500 to-violet-500 rounded-xl p-4 text-center">
                <div class="text-white font-semibold">Personalized Learning Experience</div>
                <div class="text-primary-100 text-sm">Objectives • Curriculum • Assessment</div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="py-6 px-4 sm:px-6 lg:px-8 border-t border-slate-200">
    <div class="max-w-6xl mx-auto text-center text-sm text-slate-500">
      FieldWork Demo • Experiential Learning Design Prototype
    </div>
  </footer>
</div>
