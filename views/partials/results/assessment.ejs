<div>
  <div class="mb-8">
    <h2 class="text-2xl font-bold text-slate-900 mb-2">Assessment Strategy</h2>
    <p class="text-slate-600" x-text="$store.app.synthesisOutput?.assessment?.overview"></p>
  </div>

  <div class="grid lg:grid-cols-3 gap-6 mb-8">
    <!-- Deliverables Weight -->
    <div class="card p-6">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 bg-amber-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <div>
          <div class="text-2xl font-bold text-slate-900">80%</div>
          <div class="text-sm text-slate-500">Deliverables</div>
        </div>
      </div>
    </div>

    <!-- Reflections Weight -->
    <div class="card p-6">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 bg-violet-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
          </svg>
        </div>
        <div>
          <div class="text-2xl font-bold text-slate-900" x-text="$store.app.synthesisOutput?.assessment?.reflections?.weight || '15%'"></div>
          <div class="text-sm text-slate-500">Reflections</div>
        </div>
      </div>
    </div>

    <!-- Employer Evaluation Weight -->
    <div class="card p-6">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 bg-emerald-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div>
          <div class="text-2xl font-bold text-slate-900" x-text="$store.app.synthesisOutput?.assessment?.employerEvaluation?.weight || '5%'"></div>
          <div class="text-sm text-slate-500">Employer Evaluation</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Deliverables List -->
  <div class="card p-6 mb-6">
    <h3 class="text-lg font-semibold text-slate-900 mb-4">Project Deliverables</h3>
    <div class="space-y-4">
      <template x-for="del in $store.app.synthesisOutput?.assessment?.deliverables" :key="del.name">
        <div class="border border-slate-200 rounded-lg p-4">
          <div class="flex items-start justify-between mb-3">
            <div>
              <h4 class="font-medium text-slate-900" x-text="del.name"></h4>
              <div class="text-sm text-slate-500">
                Due: Week <span x-text="del.dueWeek"></span> • Weight: <span x-text="del.weight"></span>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <div class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-2">Evaluation Criteria</div>
            <ul class="space-y-1">
              <template x-for="criterion in del.criteria" :key="criterion">
                <li class="flex items-start gap-2 text-sm text-slate-600">
                  <svg class="w-4 h-4 text-emerald-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span x-text="criterion"></span>
                </li>
              </template>
            </ul>
          </div>

          <div>
            <div class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-2">Maps to Objectives</div>
            <div class="flex flex-wrap gap-1">
              <template x-for="objId in del.objectivesMapped" :key="objId">
                <span class="badge bg-primary-100 text-primary-700" x-text="objId"></span>
              </template>
            </div>
          </div>
        </div>
      </template>
    </div>
  </div>

  <!-- Assessment Matrix -->
  <div class="card p-6">
    <h3 class="text-lg font-semibold text-slate-900 mb-4">Objective-to-Assessment Matrix</h3>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-slate-200">
            <th class="text-left py-3 px-4 font-medium text-slate-700">Objective</th>
            <template x-for="del in $store.app.synthesisOutput?.assessment?.deliverables" :key="del.name">
              <th class="text-center py-3 px-4 font-medium text-slate-700" x-text="del.name.split(' ').slice(0, 2).join(' ')"></th>
            </template>
            <th class="text-center py-3 px-4 font-medium text-slate-700">Reflections</th>
          </tr>
        </thead>
        <tbody>
          <template x-for="(obj, index) in $store.app.synthesisOutput?.learningObjectives" :key="obj.id">
            <tr class="border-b border-slate-100">
              <td class="py-3 px-4 text-slate-600">
                <span class="font-medium" x-text="obj.id"></span>:
                <span x-text="obj.text.substring(0, 50) + '...'"></span>
              </td>
              <template x-for="del in $store.app.synthesisOutput?.assessment?.deliverables" :key="del.name">
                <td class="text-center py-3 px-4">
                  <template x-if="del.objectivesMapped?.includes(obj.id)">
                    <svg class="w-5 h-5 text-emerald-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </template>
                  <template x-if="!del.objectivesMapped?.includes(obj.id)">
                    <span class="text-slate-300">—</span>
                  </template>
                </td>
              </template>
              <td class="text-center py-3 px-4">
                <svg class="w-5 h-5 text-emerald-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </td>
            </tr>
          </template>
        </tbody>
      </table>
    </div>
  </div>
</div>
