<div x-data="{ rubricModalOpen: false, selectedDeliverable: null }">
  <div class="mb-8">
    <h2 class="text-2xl font-bold text-slate-900 mb-2">Assessment Strategy</h2>
    <p class="text-slate-600" x-text="$store.app.synthesisOutput?.assessment?.overview"></p>
  </div>

  <!-- Weight Cards - 4 columns -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <!-- Deliverables Weight -->
    <div class="card p-6">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-amber-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <div>
          <div class="text-2xl font-bold text-slate-900" x-text="($store.app.synthesisOutput?.assessment?.weights?.deliverables || 40) + '%'"></div>
          <div class="text-sm text-slate-500">Deliverables</div>
        </div>
      </div>
    </div>

    <!-- Presentation Weight -->
    <div class="card p-6">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"></path>
          </svg>
        </div>
        <div>
          <div class="text-2xl font-bold text-slate-900" x-text="($store.app.synthesisOutput?.assessment?.weights?.presentation || 20) + '%'"></div>
          <div class="text-sm text-slate-500">Presentation</div>
        </div>
      </div>
    </div>

    <!-- Reflections Weight -->
    <div class="card p-6">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-violet-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
          </svg>
        </div>
        <div>
          <div class="text-2xl font-bold text-slate-900" x-text="($store.app.synthesisOutput?.assessment?.weights?.reflections || 25) + '%'"></div>
          <div class="text-sm text-slate-500">Reflections</div>
        </div>
      </div>
    </div>

    <!-- Employer Evaluation Weight -->
    <div class="card p-6">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-emerald-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div>
          <div class="text-2xl font-bold text-slate-900" x-text="($store.app.synthesisOutput?.assessment?.weights?.employerEvaluation || 15) + '%'"></div>
          <div class="text-sm text-slate-500">Employer</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Assessment Matrix - Moved up for visibility -->
  <div class="card p-6 mb-8">
    <h3 class="text-lg font-semibold text-slate-900 mb-4">Objective-to-Assessment Alignment</h3>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-slate-200">
            <th class="text-left py-3 px-4 font-medium text-slate-700">Learning Objective</th>
            <template x-for="del in $store.app.synthesisOutput?.assessment?.deliverables?.items" :key="del.name">
              <th class="text-center py-3 px-2 font-medium text-slate-700 text-xs" x-text="del.name.split(' ').slice(0, 2).join(' ')"></th>
            </template>
            <th class="text-center py-3 px-2 font-medium text-slate-700 text-xs">Presentation</th>
            <th class="text-center py-3 px-2 font-medium text-slate-700 text-xs">Reflections</th>
            <th class="text-center py-3 px-2 font-medium text-slate-700 text-xs">Employer</th>
          </tr>
        </thead>
        <tbody>
          <template x-for="(obj, index) in $store.app.synthesisOutput?.learningObjectives" :key="obj.id">
            <tr class="border-b border-slate-100 hover:bg-slate-50">
              <td class="py-3 px-4 text-slate-600">
                <div class="flex items-start gap-2">
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-semibold bg-primary-100 text-primary-700 flex-shrink-0" x-text="'LO ' + (index + 1)"></span>
                  <span class="text-sm" x-text="obj.text"></span>
                </div>
              </td>
              <!-- Deliverables columns -->
              <template x-for="del in $store.app.synthesisOutput?.assessment?.deliverables?.items" :key="del.name">
                <td class="text-center py-3 px-2">
                  <template x-if="del.objectivesMapped?.includes(obj.id)">
                    <svg class="w-5 h-5 text-emerald-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </template>
                  <template x-if="!del.objectivesMapped?.includes(obj.id)">
                    <span class="text-slate-300">&mdash;</span>
                  </template>
                </td>
              </template>
              <!-- Presentation column -->
              <td class="text-center py-3 px-2">
                <template x-if="$store.app.synthesisOutput?.assessment?.presentation?.objectivesMapped?.includes(obj.id)">
                  <svg class="w-5 h-5 text-emerald-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </template>
                <template x-if="!$store.app.synthesisOutput?.assessment?.presentation?.objectivesMapped?.includes(obj.id)">
                  <span class="text-slate-300">&mdash;</span>
                </template>
              </td>
              <!-- Reflections column -->
              <td class="text-center py-3 px-2">
                <template x-if="$store.app.synthesisOutput?.assessment?.reflections?.objectivesMapped?.includes(obj.id)">
                  <svg class="w-5 h-5 text-emerald-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </template>
                <template x-if="!$store.app.synthesisOutput?.assessment?.reflections?.objectivesMapped?.includes(obj.id)">
                  <span class="text-slate-300">&mdash;</span>
                </template>
              </td>
              <!-- Employer column -->
              <td class="text-center py-3 px-2">
                <template x-if="$store.app.synthesisOutput?.assessment?.employerEvaluation?.objectivesMapped?.includes(obj.id)">
                  <svg class="w-5 h-5 text-emerald-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </template>
                <template x-if="!$store.app.synthesisOutput?.assessment?.employerEvaluation?.objectivesMapped?.includes(obj.id)">
                  <span class="text-slate-300">&mdash;</span>
                </template>
              </td>
            </tr>
          </template>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Project Deliverables Section -->
  <div class="card p-6 mb-6">
    <div class="flex items-center gap-3 mb-4">
      <div class="w-8 h-8 bg-amber-100 rounded-lg flex items-center justify-center">
        <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-slate-900">Project Deliverables</h3>
        <p class="text-sm text-slate-500" x-text="$store.app.synthesisOutput?.assessment?.deliverables?.description"></p>
      </div>
    </div>
    <div class="space-y-4">
      <template x-for="del in $store.app.synthesisOutput?.assessment?.deliverables?.items" :key="del.name">
        <div class="border border-slate-200 rounded-lg p-4">
          <div class="flex items-start justify-between mb-3">
            <div>
              <h4 class="font-medium text-slate-900" x-text="del.name"></h4>
              <div class="text-sm text-slate-500">
                Due: Week <span x-text="del.dueWeek"></span> &bull; Weight: <span x-text="del.weight"></span>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <div class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-2">Evaluation Criteria</div>
            <ul class="space-y-1">
              <template x-for="criterion in del.criteria" :key="criterion">
                <li class="flex items-start gap-2 text-sm text-slate-600">
                  <svg class="w-4 h-4 text-emerald-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span x-text="criterion"></span>
                </li>
              </template>
            </ul>
          </div>

          <div>
            <div class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-2">Maps to Objectives</div>
            <div class="flex flex-wrap gap-1">
              <template x-for="objId in del.objectivesMapped" :key="objId">
                <span class="relative group">
                  <span class="badge bg-primary-100 text-primary-700 cursor-help" x-text="'LO ' + $store.app.getObjectiveNumber(objId)"></span>
                  <span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-3 py-2 bg-slate-800 text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-normal w-64 z-10 pointer-events-none"
                        x-text="$store.app.synthesisOutput?.learningObjectives?.find(o => o.id === objId)?.text"></span>
                </span>
              </template>
            </div>
          </div>

          <!-- View Rubric Button (only for deliverables with rubrics) -->
          <template x-if="del.rubric">
            <div class="mt-4 pt-4 border-t border-slate-200">
              <button @click="selectedDeliverable = del; rubricModalOpen = true"
                      class="flex items-center gap-2 px-3 py-2 bg-amber-100 text-amber-700 rounded-lg hover:bg-amber-200 transition-colors text-sm font-medium">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                View Rubric
              </button>
            </div>
          </template>
        </div>
      </template>
    </div>
  </div>

  <!-- Project Presentation Section -->
  <div class="card p-6 mb-6">
    <div class="flex items-center gap-3 mb-4">
      <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
        <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-slate-900">Project Presentation</h3>
        <p class="text-sm text-slate-500" x-text="$store.app.synthesisOutput?.assessment?.presentation?.description"></p>
      </div>
    </div>
    <div class="border border-slate-200 rounded-lg p-4">
      <div class="flex items-start justify-between mb-3">
        <div>
          <h4 class="font-medium text-slate-900" x-text="$store.app.synthesisOutput?.assessment?.presentation?.name"></h4>
          <div class="text-sm text-slate-500">
            Due: Week <span x-text="$store.app.synthesisOutput?.assessment?.presentation?.dueWeek"></span> &bull; Weight: <span x-text="$store.app.synthesisOutput?.assessment?.presentation?.weight"></span>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <div class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-2">Evaluation Criteria</div>
        <ul class="space-y-1">
          <template x-for="criterion in $store.app.synthesisOutput?.assessment?.presentation?.criteria" :key="criterion">
            <li class="flex items-start gap-2 text-sm text-slate-600">
              <svg class="w-4 h-4 text-emerald-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span x-text="criterion"></span>
            </li>
          </template>
        </ul>
      </div>

      <div>
        <div class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-2">Maps to Objectives</div>
        <div class="flex flex-wrap gap-1">
          <template x-for="objId in $store.app.synthesisOutput?.assessment?.presentation?.objectivesMapped" :key="objId">
            <span class="relative group">
                  <span class="badge bg-primary-100 text-primary-700 cursor-help" x-text="'LO ' + $store.app.getObjectiveNumber(objId)"></span>
                  <span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-3 py-2 bg-slate-800 text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-normal w-64 z-10 pointer-events-none"
                        x-text="$store.app.synthesisOutput?.learningObjectives?.find(o => o.id === objId)?.text"></span>
                </span>
          </template>
        </div>
      </div>
    </div>
  </div>

  <!-- Reflections Section -->
  <div class="card p-6 mb-6">
    <div class="flex items-center gap-3 mb-4">
      <div class="w-8 h-8 bg-violet-100 rounded-lg flex items-center justify-center">
        <svg class="w-4 h-4 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-slate-900">Reflections</h3>
        <p class="text-sm text-slate-500" x-text="$store.app.synthesisOutput?.assessment?.reflections?.description"></p>
      </div>
    </div>
    <div class="border border-slate-200 rounded-lg p-4">
      <div class="flex items-start justify-between mb-3">
        <div>
          <h4 class="font-medium text-slate-900">DEAL Reflections</h4>
          <div class="text-sm text-slate-500">
            <span x-text="$store.app.synthesisOutput?.assessment?.reflections?.schedule"></span> &bull; Weight: <span x-text="$store.app.synthesisOutput?.assessment?.reflections?.weight"></span>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <div class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-2">Evaluation Criteria</div>
        <ul class="space-y-1">
          <template x-for="criterion in $store.app.synthesisOutput?.assessment?.reflections?.criteria" :key="criterion">
            <li class="flex items-start gap-2 text-sm text-slate-600">
              <svg class="w-4 h-4 text-emerald-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span x-text="criterion"></span>
            </li>
          </template>
        </ul>
      </div>

      <div>
        <div class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-2">Maps to Objectives</div>
        <div class="flex flex-wrap gap-1">
          <template x-for="objId in $store.app.synthesisOutput?.assessment?.reflections?.objectivesMapped" :key="objId">
            <span class="relative group">
                  <span class="badge bg-primary-100 text-primary-700 cursor-help" x-text="'LO ' + $store.app.getObjectiveNumber(objId)"></span>
                  <span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-3 py-2 bg-slate-800 text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-normal w-64 z-10 pointer-events-none"
                        x-text="$store.app.synthesisOutput?.learningObjectives?.find(o => o.id === objId)?.text"></span>
                </span>
          </template>
        </div>
      </div>
    </div>
  </div>

  <!-- Employer Evaluation Section -->
  <div class="card p-6 mb-6">
    <div class="flex items-center gap-3 mb-4">
      <div class="w-8 h-8 bg-emerald-100 rounded-lg flex items-center justify-center">
        <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-slate-900">Employer Evaluation</h3>
        <p class="text-sm text-slate-500" x-text="$store.app.synthesisOutput?.assessment?.employerEvaluation?.description"></p>
      </div>
    </div>
    <div class="border border-slate-200 rounded-lg p-4">
      <div class="flex items-start justify-between mb-3">
        <div>
          <h4 class="font-medium text-slate-900">Supervisor Assessment</h4>
          <div class="text-sm text-slate-500">
            <span x-text="$store.app.synthesisOutput?.assessment?.employerEvaluation?.timing?.join(' & ')"></span> &bull; Weight: <span x-text="$store.app.synthesisOutput?.assessment?.employerEvaluation?.weight"></span>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <div class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-2">Assessment Areas</div>
        <ul class="space-y-1">
          <template x-for="area in $store.app.synthesisOutput?.assessment?.employerEvaluation?.areas" :key="area">
            <li class="flex items-start gap-2 text-sm text-slate-600">
              <svg class="w-4 h-4 text-emerald-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span x-text="area"></span>
            </li>
          </template>
        </ul>
      </div>

      <div>
        <div class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-2">Maps to Objectives</div>
        <div class="flex flex-wrap gap-1">
          <template x-for="objId in $store.app.synthesisOutput?.assessment?.employerEvaluation?.objectivesMapped" :key="objId">
            <span class="relative group">
                  <span class="badge bg-primary-100 text-primary-700 cursor-help" x-text="'LO ' + $store.app.getObjectiveNumber(objId)"></span>
                  <span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-3 py-2 bg-slate-800 text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-normal w-64 z-10 pointer-events-none"
                        x-text="$store.app.synthesisOutput?.learningObjectives?.find(o => o.id === objId)?.text"></span>
                </span>
          </template>
        </div>
      </div>
    </div>
  </div>

  <!-- Rubric Modal -->
  <div x-show="rubricModalOpen"
       class="fixed inset-0 z-50 flex items-center justify-center p-4"
       @keydown.escape.window="rubricModalOpen = false">

    <!-- Backdrop -->
    <div x-show="rubricModalOpen"
         class="absolute inset-0 bg-black/50"
         @click="rubricModalOpen = false"></div>

    <!-- Modal Panel -->
    <div x-show="rubricModalOpen"
         @click.stop
         class="relative bg-white rounded-xl shadow-2xl ring-1 ring-slate-200 w-full max-w-5xl max-h-[90vh] overflow-hidden flex flex-col">

      <!-- Modal Header -->
      <div class="flex items-start justify-between px-6 py-4 border-b border-slate-200 bg-slate-50">
        <div>
          <div class="flex items-center gap-3">
            <h3 class="text-lg font-semibold text-slate-900" x-text="selectedDeliverable?.name + ' Rubric'"></h3>
            <span class="badge"
                  :class="selectedDeliverable?.rubric?.gradingType === 'letter-grade' ? 'badge-blue' : 'badge-green'"
                  x-text="selectedDeliverable?.rubric?.gradingType === 'letter-grade' ? 'Letter Grade' : 'Pass/Fail'">
            </span>
          </div>
          <p class="text-sm text-slate-500 mt-1">
            Due: Week <span x-text="selectedDeliverable?.dueWeek"></span> &bull; Weight: <span x-text="selectedDeliverable?.weight"></span>
          </p>
        </div>
        <button @click="rubricModalOpen = false" class="p-2 bg-slate-100 hover:bg-slate-200 rounded-lg transition-colors">
          <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Performance Level Legend -->
      <div class="px-6 py-3 border-b border-slate-200 bg-white">
        <div class="flex flex-wrap items-center gap-3">
          <span class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Performance Levels:</span>
          <template x-for="level in selectedDeliverable?.rubric?.performanceLevels" :key="level.id">
            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium"
                  :class="$store.app.getPerformanceLevelColor(level.id, selectedDeliverable?.rubric?.gradingType)">
              <span x-text="level.label"></span>
              <span class="text-xs opacity-75" x-text="level.grade ? '(' + level.grade + ')' : '(' + level.status + ')'"></span>
            </span>
          </template>
        </div>
      </div>

      <!-- Modal Content -->
      <div class="p-6 overflow-y-auto">
        <template x-if="selectedDeliverable?.rubric">
          <div>
            <!-- Desktop Table View -->
            <div class="hidden lg:block">
              <table class="w-full text-sm border-collapse">
                <thead>
                  <tr class="bg-slate-50">
                    <th class="text-left py-3 px-4 font-semibold text-slate-700 border border-slate-200 w-48">Criterion</th>
                    <template x-for="level in selectedDeliverable.rubric.performanceLevels" :key="level.id">
                      <th class="text-center py-3 px-4 font-semibold text-slate-700 border border-slate-200"
                          :class="$store.app.getPerformanceLevelHeaderColor(level.id, selectedDeliverable.rubric.gradingType)"
                          x-text="level.label">
                      </th>
                    </template>
                  </tr>
                </thead>
                <tbody>
                  <template x-for="criterion in selectedDeliverable.rubric.criteria" :key="criterion.name">
                    <tr class="hover:bg-slate-50">
                      <td class="py-3 px-4 border border-slate-200 align-top">
                        <div class="font-medium text-slate-900" x-text="criterion.name"></div>
                        <div class="text-xs text-slate-500 mt-1" x-text="'Weight: ' + criterion.weight"></div>
                        <div class="flex flex-wrap gap-1 mt-2">
                          <template x-for="objId in criterion.objectivesMapped" :key="objId">
                            <span class="badge bg-primary-100 text-primary-700 text-xs" x-text="'LO ' + $store.app.getObjectiveNumber(objId)"></span>
                          </template>
                        </div>
                      </td>
                      <template x-for="level in selectedDeliverable.rubric.performanceLevels" :key="level.id">
                        <td class="py-3 px-4 border border-slate-200 align-top text-slate-600 text-xs leading-relaxed"
                            :class="$store.app.getPerformanceLevelCellColor(level.id, selectedDeliverable.rubric.gradingType)"
                            x-text="criterion.descriptors[level.id]">
                        </td>
                      </template>
                    </tr>
                  </template>
                </tbody>
              </table>
            </div>

            <!-- Mobile Card View -->
            <div class="lg:hidden space-y-4">
              <template x-for="criterion in selectedDeliverable.rubric.criteria" :key="criterion.name">
                <div class="border border-slate-200 rounded-lg overflow-hidden">
                  <div class="bg-slate-50 px-4 py-3 border-b border-slate-200">
                    <div class="font-medium text-slate-900" x-text="criterion.name"></div>
                    <div class="flex items-center gap-3 mt-1">
                      <span class="text-xs text-slate-500" x-text="'Weight: ' + criterion.weight"></span>
                      <div class="flex flex-wrap gap-1">
                        <template x-for="objId in criterion.objectivesMapped" :key="objId">
                          <span class="badge bg-primary-100 text-primary-700 text-xs" x-text="'LO ' + $store.app.getObjectiveNumber(objId)"></span>
                        </template>
                      </div>
                    </div>
                  </div>
                  <div class="divide-y divide-slate-100">
                    <template x-for="level in selectedDeliverable.rubric.performanceLevels" :key="level.id">
                      <div class="px-4 py-3"
                           :class="$store.app.getPerformanceLevelCellColor(level.id, selectedDeliverable.rubric.gradingType)">
                        <div class="text-xs font-semibold mb-1"
                             :class="$store.app.getPerformanceLevelTextColor(level.id, selectedDeliverable.rubric.gradingType)"
                             x-text="level.label + (level.grade ? ' (' + level.grade + ')' : ' (' + level.status + ')')">
                        </div>
                        <p class="text-xs text-slate-600 leading-relaxed" x-text="criterion.descriptors[level.id]"></p>
                      </div>
                    </template>
                  </div>
                </div>
              </template>
            </div>
          </div>
        </template>
      </div>
    </div>
  </div>
</div>
