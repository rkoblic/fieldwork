<div>
  <div class="mb-8">
    <h2 class="text-2xl font-bold text-slate-900 mb-2">Week-by-Week Curriculum</h2>
    <p class="text-slate-600">
      <span x-text="$store.app.synthesisOutput?.curriculum?.weeks?.length || 0"></span>-week structured learning experience
      with activities spanning all Kolb phases.
    </p>
  </div>

  <!-- Kolb Phase Legend -->
  <div class="mb-6 flex flex-wrap gap-3">
    <span class="text-sm text-slate-500">Kolb Phases:</span>
    <template x-for="phase in $store.app.framework?.learningStrategies?.kolbCycle?.phases" :key="phase.id">
      <span class="badge"
            :class="{
              'badge-blue': phase.color === 'blue',
              'badge-green': phase.color === 'green',
              'badge-purple': phase.color === 'purple',
              'badge-amber': phase.color === 'amber'
            }"
            x-text="phase.name"></span>
    </template>
  </div>

  <div class="space-y-3" x-data="{ expandedWeek: null }">
    <template x-for="week in $store.app.synthesisOutput?.curriculum?.weeks" :key="week.weekNumber">
      <div class="card overflow-hidden">
        <!-- Week Header (clickable) -->
        <button
          @click="expandedWeek = expandedWeek === week.weekNumber ? null : week.weekNumber"
          class="w-full px-6 py-4 flex items-center justify-between hover:bg-slate-50 transition-colors text-left">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-primary-100 text-primary-700 rounded-lg flex flex-col items-center justify-center">
              <span class="text-xs uppercase">Week</span>
              <span class="text-lg font-bold" x-text="week.weekNumber"></span>
            </div>
            <div>
              <h3 class="font-semibold text-slate-900" x-text="week.theme"></h3>
              <div class="flex items-center gap-2 text-sm text-slate-500">
                <span x-text="week.activities?.length + ' activities'"></span>
                <span>â€¢</span>
                <span x-text="week.deliverables?.length + ' deliverable(s)'"></span>
              </div>
            </div>
          </div>
          <svg class="w-5 h-5 text-slate-400 transition-transform" :class="expandedWeek === week.weekNumber && 'rotate-180'" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>

        <!-- Week Details (expandable) -->
        <div x-show="expandedWeek === week.weekNumber" x-collapse class="border-t border-slate-200">
          <div class="p-6 space-y-6">

            <!-- Week Objectives -->
            <div>
              <h4 class="text-sm font-semibold text-slate-700 mb-2">Week Objectives</h4>
              <ul class="space-y-1">
                <template x-for="obj in week.objectives" :key="obj">
                  <li class="flex items-start gap-2 text-sm text-slate-600">
                    <svg class="w-4 h-4 text-primary-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span x-text="obj"></span>
                  </li>
                </template>
              </ul>
            </div>

            <!-- Activities -->
            <div>
              <h4 class="text-sm font-semibold text-slate-700 mb-2">Activities</h4>
              <div class="space-y-2">
                <template x-for="activity in week.activities" :key="activity.description">
                  <div class="flex items-center gap-3 p-3 bg-slate-50 rounded-lg">
                    <span class="badge"
                          :class="{
                            'badge-blue': activity.kolbPhase === 'experience',
                            'badge-green': activity.kolbPhase === 'reflection',
                            'badge-purple': activity.kolbPhase === 'conceptualization',
                            'badge-amber': activity.kolbPhase === 'experimentation'
                          }"
                          x-text="$store.app.getKolbPhaseName(activity.kolbPhase)"></span>
                    <span class="text-sm text-slate-700 flex-1" x-text="activity.description"></span>
                    <span class="text-sm text-slate-500" x-text="activity.hours + ' hr'"></span>
                  </div>
                </template>
              </div>
            </div>

            <!-- Deliverables -->
            <div x-show="week.deliverables?.length">
              <h4 class="text-sm font-semibold text-slate-700 mb-2">Deliverables Due</h4>
              <ul class="space-y-1">
                <template x-for="del in week.deliverables" :key="del">
                  <li class="flex items-center gap-2 text-sm text-slate-600">
                    <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    <span x-text="del"></span>
                  </li>
                </template>
              </ul>
            </div>

            <!-- DEAL Reflection -->
            <div class="bg-violet-50 rounded-lg p-4 border border-violet-100">
              <h4 class="text-sm font-semibold text-violet-900 mb-3">DEAL Reflection Prompts</h4>
              <div class="space-y-3 text-sm">
                <div>
                  <span class="font-medium text-violet-800">Describe:</span>
                  <span class="text-violet-700" x-text="week.dealReflection?.describe"></span>
                </div>
                <div>
                  <span class="font-medium text-violet-800">Examine:</span>
                  <span class="text-violet-700" x-text="week.dealReflection?.examine"></span>
                </div>
                <div>
                  <span class="font-medium text-violet-800">Articulate Learning:</span>
                  <span class="text-violet-700" x-text="week.dealReflection?.articulate"></span>
                </div>
              </div>
            </div>

            <!-- Competency Focus -->
            <div>
              <h4 class="text-sm font-semibold text-slate-700 mb-2">Competency Focus</h4>
              <div class="flex flex-wrap gap-2">
                <template x-for="compId in week.naceCompetencyFocus" :key="compId">
                  <span class="badge badge-blue" x-text="$store.app.getNaceCompetencyName(compId)"></span>
                </template>
              </div>
            </div>

          </div>
        </div>
      </div>
    </template>
  </div>
</div>
