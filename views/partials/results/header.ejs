<div class="bg-white border-b border-slate-200 sticky top-0 z-40">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Top bar -->
    <div class="flex items-center justify-between py-4">
      <div class="text-xl font-bold text-primary-600">FieldWork</div>
      <button @click="$store.app.startOver()" class="btn-secondary text-sm py-2">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
        Start Over
      </button>
    </div>

    <!-- Student/Institution/Employer Hero -->
    <div class="pb-4">
      <h1 class="text-2xl font-bold text-slate-900 mb-1">
        <span x-text="$store.app.activeStudent?.name"></span>'s Learning Experience
      </h1>
      <p class="text-slate-600">
        <span x-text="$store.app.activeInstitution?.name"></span>
        <span class="text-slate-400 mx-2">→</span>
        <span x-text="$store.app.activeEmployer?.companyName"></span>
      </p>
    </div>

    <!-- Tabs - ordered to follow backwards design: objectives → assessment → curriculum → sample-week → alignment -->
    <div class="flex gap-1 -mb-px overflow-x-auto">
      <template x-for="tab in [
        { id: 'objectives', label: 'Learning Objectives', icon: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2' },
        { id: 'assessment', label: 'Assessment', icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' },
        { id: 'curriculum', label: 'Curriculum', icon: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z' },
        { id: 'sample-week', label: 'Sample Week', icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z' },
        { id: 'alignment', label: 'Alignment', icon: 'M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z' }
      ]" :key="tab.id">
        <button
          @click="$store.app.isTabAvailable(tab.id) && ($store.app.resultsActiveTab = tab.id)"
          class="flex items-center gap-2 px-4 py-3 text-sm font-medium border-b-2 transition-colors whitespace-nowrap"
          :class="!$store.app.isTabAvailable(tab.id)
            ? 'border-transparent text-slate-300 cursor-not-allowed'
            : $store.app.resultsActiveTab === tab.id
              ? 'border-primary-500 text-primary-600'
              : 'border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300'"
          :disabled="!$store.app.isTabAvailable(tab.id)">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" :d="tab.icon"></path>
          </svg>
          <span x-text="tab.label"></span>
          <template x-if="!$store.app.isTabAvailable(tab.id)">
            <span class="ml-1 text-xs text-slate-400">(pending)</span>
          </template>
        </button>
      </template>
    </div>
  </div>
</div>
