<div>
  <div class="mb-8">
    <h2 class="text-2xl font-bold text-slate-900 mb-2">Learning Objectives</h2>
    <p class="text-slate-600">
      <span x-text="$store.app.synthesisOutput?.learningObjectives?.length || 0"></span> custom objectives
      designed for this student-project-institution combination.
    </p>
  </div>

  <div class="space-y-4">
    <template x-for="(obj, index) in $store.app.synthesisOutput?.learningObjectives" :key="obj.id">
      <div class="card p-6">
        <div class="flex items-start gap-4">
          <!-- Number -->
          <div class="w-10 h-10 bg-primary-100 text-primary-700 rounded-full flex items-center justify-center text-lg font-semibold flex-shrink-0">
            <span x-text="index + 1"></span>
          </div>

          <div class="flex-1">
            <!-- Objective text -->
            <p class="text-lg text-slate-900 mb-3" x-text="obj.text"></p>

            <!-- NACE Competency badges -->
            <div class="mb-4 flex flex-wrap gap-2">
              <template x-for="comp in $store.app.getNaceCompetencies(obj)" :key="comp">
                <span class="badge badge-blue" x-text="$store.app.getNaceCompetencyName(comp)"></span>
              </template>
            </div>

            <!-- Traceability -->
            <div class="bg-slate-50 rounded-lg p-4 border border-slate-200">
              <h4 class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-3">Traceability</h4>
              <div class="grid sm:grid-cols-3 gap-4 text-sm">
                <div>
                  <div class="text-xs text-slate-400 uppercase tracking-wide mb-1">Employer Need</div>
                  <div class="text-slate-700" x-text="obj.traceability?.employerNeed"></div>
                </div>
                <div>
                  <div class="text-xs text-slate-400 uppercase tracking-wide mb-1">Student Goal</div>
                  <div class="text-slate-700" x-text="obj.traceability?.studentGoal"></div>
                </div>
                <div>
                  <div class="text-xs text-slate-400 uppercase tracking-wide mb-1">Institutional Outcome</div>
                  <div class="text-slate-700" x-text="obj.traceability?.institutionalOutcome"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </template>
  </div>
</div>
