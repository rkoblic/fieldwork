<div x-data="{ trayOpen: false, selectedActivity: null }">
  <div class="mb-8">
    <h2 class="text-2xl font-bold text-slate-900 mb-2">Sample Week Detail</h2>
    <p class="text-slate-600">A detailed view of what a typical week looks like in this learning experience.</p>
  </div>

  <template x-if="$store.app.synthesisOutput?.sampleWeek">
    <div class="space-y-6">
      <!-- Week Header -->
      <div class="card p-6 bg-gradient-to-r from-primary-50 to-violet-50 border-primary-200">
        <div class="flex items-start gap-4">
          <div class="w-16 h-16 bg-white rounded-xl flex flex-col items-center justify-center shadow-sm">
            <span class="text-xs uppercase text-slate-500">Week</span>
            <span class="text-2xl font-bold text-primary-600" x-text="$store.app.synthesisOutput.sampleWeek.weekNumber"></span>
          </div>
          <div>
            <h3 class="text-xl font-bold text-slate-900" x-text="$store.app.synthesisOutput.sampleWeek.theme"></h3>
            <p class="text-slate-600" x-text="$store.app.synthesisOutput.sampleWeek.subtitle"></p>
            <div class="mt-2 flex items-center gap-4 text-sm text-slate-500">
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span x-text="$store.app.synthesisOutput.sampleWeek.totalHours + ' hours'"></span>
              </span>
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
                <span x-text="$store.app.synthesisOutput.sampleWeek.deliverables?.length + ' milestone(s)'"></span>
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Objectives + Competency Focus (combined) -->
      <div class="card p-6">
        <div class="flex items-center justify-between mb-4">
          <h4 class="font-semibold text-slate-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
            </svg>
            Week Objectives
          </h4>
          <!-- Competency Focus Badges -->
          <div class="flex items-center gap-2">
            <template x-for="(comp, idx) in $store.app.synthesisOutput.sampleWeek.naceCompetencyFocus" :key="comp">
              <span class="badge"
                    :class="idx === 0 ? 'badge-blue' : 'bg-slate-100 text-slate-700'"
                    x-text="$store.app.getNaceCompetencyName(comp)">
              </span>
            </template>
          </div>
        </div>

        <!-- Learning Objective Badges (linked to course objectives) -->
        <template x-if="$store.app.synthesisOutput.sampleWeek.objectiveIds">
          <div class="flex flex-wrap items-center gap-2 mb-4">
            <span class="text-xs text-slate-500">Course LOs addressed:</span>
            <template x-for="objId in [...$store.app.synthesisOutput.sampleWeek.objectiveIds].sort((a, b) => $store.app.getObjectiveNumber(a) - $store.app.getObjectiveNumber(b))" :key="objId">
              <span class="relative group inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-primary-100 text-primary-700 cursor-help"
                    x-text="'LO ' + $store.app.getObjectiveNumber(objId)">
              </span>
            </template>
          </div>
        </template>

        <ul class="space-y-2">
          <template x-for="obj in $store.app.synthesisOutput.sampleWeek.objectives" :key="obj">
            <li class="flex items-start gap-2 text-sm text-slate-600">
              <svg class="w-4 h-4 text-primary-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span x-text="obj"></span>
            </li>
          </template>
        </ul>
      </div>

      <!-- Activities -->
      <div class="card p-6">
        <h4 class="font-semibold text-slate-900 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
          </svg>
          Activities
        </h4>
        <div class="space-y-3">
          <template x-for="(activity, actIdx) in $store.app.synthesisOutput.sampleWeek.activities" :key="actIdx">
            <div class="flex items-start gap-3 p-3 bg-slate-50 rounded-lg"
                 :class="{
                   'cursor-pointer hover:bg-violet-50 hover:ring-2 hover:ring-violet-200 transition-all': activity.kolbPhase === 'conceptualization' && activity.resources?.length > 0
                 }"
                 @click="activity.kolbPhase === 'conceptualization' && activity.resources?.length > 0 ? (selectedActivity = activity, trayOpen = true) : null">
              <div class="flex-shrink-0">
                <span class="badge"
                      :class="{
                        'badge-blue': activity.kolbPhase === 'experience',
                        'badge-green': activity.kolbPhase === 'reflection',
                        'badge-purple': activity.kolbPhase === 'conceptualization',
                        'badge-amber': activity.kolbPhase === 'experimentation'
                      }"
                      x-text="$store.app.getKolbPhaseName(activity.kolbPhase)">
                </span>
              </div>
              <div class="flex-1">
                <p class="text-sm text-slate-700" x-text="activity.description"></p>
              </div>
              <div class="flex items-center gap-2">
                <!-- Resource indicator for conceptualization activities -->
                <template x-if="activity.kolbPhase === 'conceptualization' && activity.resources?.length > 0">
                  <button type="button" class="flex-shrink-0 flex flex-row items-center gap-1.5 px-3 py-1.5 bg-violet-100 text-violet-700 rounded-full cursor-pointer hover:bg-violet-200 transition-colors">
                    <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    <span class="text-xs font-medium flex-shrink-0" x-text="activity.resources.length + ' resources'"></span>
                    <svg class="w-3 h-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </button>
                </template>
                <div class="flex-shrink-0 text-sm text-slate-500" x-text="activity.hours + ' hr'"></div>
              </div>
            </div>
          </template>
        </div>
      </div>

      <!-- Milestones -->
      <div class="card p-6">
        <div class="flex items-center justify-between mb-4">
          <h4 class="font-semibold text-slate-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Milestones
          </h4>
          <span class="text-xs font-medium text-slate-500 bg-slate-100 px-2 py-1 rounded">Ungraded Checkpoint</span>
        </div>
        <ul class="space-y-2">
          <template x-for="del in $store.app.synthesisOutput.sampleWeek.deliverables.filter(d => !d.toLowerCase().includes('deal reflection'))" :key="del">
            <li class="flex items-center gap-2 p-3 bg-amber-50 rounded-lg border border-amber-100">
              <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-sm text-amber-900" x-text="del"></span>
            </li>
          </template>
        </ul>
      </div>

      <!-- DEAL Reflection -->
      <div class="card p-6 bg-violet-50 border-violet-200">
        <div class="flex items-center justify-between mb-4">
          <h4 class="font-semibold text-violet-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-violet-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
            </svg>
            DEAL Reflection Prompts
          </h4>
          <span class="text-xs font-medium text-violet-700 bg-violet-200 px-2 py-1 rounded">Graded</span>
        </div>
        <div class="space-y-4">
          <div>
            <div class="text-sm font-semibold text-violet-800 mb-1">Describe</div>
            <p class="text-sm text-violet-700" x-text="$store.app.synthesisOutput.sampleWeek.dealReflection?.describe"></p>
          </div>
          <div>
            <div class="text-sm font-semibold text-violet-800 mb-1">Examine</div>
            <p class="text-sm text-violet-700" x-text="$store.app.synthesisOutput.sampleWeek.dealReflection?.examine"></p>
          </div>
          <div>
            <div class="text-sm font-semibold text-violet-800 mb-1">Articulate Learning</div>
            <p class="text-sm text-violet-700" x-text="$store.app.synthesisOutput.sampleWeek.dealReflection?.articulate"></p>
          </div>
        </div>
      </div>
    </div>
  </template>

  <!-- Resource Modal -->
  <div x-show="trayOpen"
       class="fixed inset-0 z-50 flex items-center justify-center p-4"
       @keydown.escape.window="trayOpen = false">

    <!-- Backdrop -->
    <div x-show="trayOpen"
         class="absolute inset-0 bg-black/50"
         @click="trayOpen = false"></div>

    <!-- Modal Panel -->
    <div x-show="trayOpen"
         @click.stop
         class="relative bg-white rounded-xl shadow-2xl ring-1 ring-slate-200 w-full max-w-xl max-h-[85vh] overflow-hidden flex flex-col">

      <!-- Modal Header -->
      <div class="flex items-center justify-between px-6 py-4 border-b border-slate-200">
        <div>
          <h3 class="text-lg font-semibold text-slate-900">Learning Resources</h3>
          <p class="text-sm text-slate-500" x-text="selectedActivity?.description"></p>
        </div>
        <button @click="trayOpen = false" class="p-2 bg-slate-100 hover:bg-slate-200 rounded-lg transition-colors">
          <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Modal Content -->
      <div class="p-6 space-y-6 overflow-y-auto">
      <template x-if="selectedActivity?.resources">
        <div class="space-y-6">
          <!-- Personalized Insights Section (AI-Generated) - First -->
          <template x-if="selectedActivity.resources.filter(r => r.type === 'ai-generated').length > 0">
            <div>
              <h4 class="text-sm font-semibold text-slate-700 uppercase tracking-wide mb-3 flex items-center gap-2">
                <svg class="w-4 h-4 text-violet-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
                Personalized Insights
              </h4>
              <div class="space-y-3">
                <template x-for="resource in selectedActivity.resources.filter(r => r.type === 'ai-generated')" :key="resource.id">
                  <div class="p-4 bg-violet-50 rounded-lg border border-violet-100">
                    <div class="font-medium text-slate-900" x-text="resource.title"></div>
                    <p class="text-sm text-slate-600 mt-1" x-text="resource.relevance"></p>
                    <p class="text-xs text-violet-700 mt-1 italic" x-text="resource.personalizationNote"></p>
                    <div class="prose prose-sm prose-violet max-w-none mt-3 pt-3 border-t border-violet-200 text-slate-700"
                         x-html="resource.content.replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>').replace(/\n\n/g, '</p><p class=\'mt-3\'>').replace(/\n/g, '<br>')"></div>
                  </div>
                </template>
              </div>
            </div>
          </template>

          <!-- Articles Section -->
          <template x-if="selectedActivity.resources.filter(r => r.type === 'article').length > 0">
            <div>
              <h4 class="text-sm font-semibold text-slate-700 uppercase tracking-wide mb-3 flex items-center gap-2">
                <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                </svg>
                Articles
              </h4>
              <div class="space-y-3">
                <template x-for="resource in selectedActivity.resources.filter(r => r.type === 'article')" :key="resource.id">
                  <a :href="resource.url" target="_blank" rel="noopener noreferrer"
                     class="block p-4 bg-primary-50 rounded-lg border border-primary-100 hover:bg-primary-100 transition-colors group">
                    <div class="flex items-start justify-between gap-2">
                      <div>
                        <div class="font-medium text-slate-900 group-hover:text-primary-700" x-text="resource.title"></div>
                        <div class="text-xs text-slate-500 mt-0.5" x-text="resource.source"></div>
                      </div>
                      <svg class="w-4 h-4 text-slate-400 group-hover:text-primary-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                    </div>
                    <p class="text-sm text-slate-600 mt-2" x-text="resource.relevance"></p>
                    <p class="text-xs text-primary-700 mt-2 italic" x-text="resource.personalizationNote"></p>
                  </a>
                </template>
              </div>
            </div>
          </template>

          <!-- Videos Section -->
          <template x-if="selectedActivity.resources.filter(r => r.type === 'video').length > 0">
            <div>
              <h4 class="text-sm font-semibold text-slate-700 uppercase tracking-wide mb-3 flex items-center gap-2">
                <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Videos
              </h4>
              <div class="space-y-3">
                <template x-for="resource in selectedActivity.resources.filter(r => r.type === 'video')" :key="resource.id">
                  <a :href="resource.url" target="_blank" rel="noopener noreferrer"
                     class="block p-4 bg-amber-50 rounded-lg border border-amber-100 hover:bg-amber-100 transition-colors group">
                    <div class="flex items-start justify-between gap-2">
                      <div>
                        <div class="font-medium text-slate-900 group-hover:text-amber-700" x-text="resource.title"></div>
                        <div class="text-xs text-slate-500 mt-0.5">
                          <span x-text="resource.source"></span>
                          <span class="mx-1">-</span>
                          <span x-text="resource.duration"></span>
                        </div>
                      </div>
                      <svg class="w-4 h-4 text-slate-400 group-hover:text-amber-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                    </div>
                    <p class="text-sm text-slate-600 mt-2" x-text="resource.relevance"></p>
                    <p class="text-xs text-amber-700 mt-2 italic" x-text="resource.personalizationNote"></p>
                  </a>
                </template>
              </div>
            </div>
          </template>
        </div>
      </template>
    </div>
    </div>
  </div>
</div>
