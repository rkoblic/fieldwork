<div>
  <div class="mb-8">
    <h2 class="text-2xl font-bold text-slate-900 mb-2">Sample Week Detail</h2>
    <p class="text-slate-600">A detailed view of what a typical week looks like in this learning experience.</p>
  </div>

  <template x-if="$store.app.synthesisOutput?.sampleWeek">
    <div>
      <!-- Week Header -->
      <div class="card p-6 mb-6 bg-gradient-to-r from-primary-50 to-violet-50 border-primary-200">
        <div class="flex items-start gap-4">
          <div class="w-16 h-16 bg-white rounded-xl flex flex-col items-center justify-center shadow-sm">
            <span class="text-xs uppercase text-slate-500">Week</span>
            <span class="text-2xl font-bold text-primary-600" x-text="$store.app.synthesisOutput.sampleWeek.weekNumber"></span>
          </div>
          <div>
            <h3 class="text-xl font-bold text-slate-900" x-text="$store.app.synthesisOutput.sampleWeek.theme"></h3>
            <p class="text-slate-600" x-text="$store.app.synthesisOutput.sampleWeek.subtitle"></p>
            <div class="mt-2 flex items-center gap-4 text-sm text-slate-500">
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span x-text="$store.app.synthesisOutput.sampleWeek.totalHours + ' hours'"></span>
              </span>
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
                <span x-text="$store.app.synthesisOutput.sampleWeek.deliverables?.length + ' deliverable(s)'"></span>
              </span>
            </div>
          </div>
        </div>
      </div>

      <div class="grid lg:grid-cols-2 gap-6">
        <!-- Left Column -->
        <div class="space-y-6">
          <!-- Objectives -->
          <div class="card p-6">
            <h4 class="font-semibold text-slate-900 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
              </svg>
              Week Objectives
            </h4>
            <ul class="space-y-2">
              <template x-for="obj in $store.app.synthesisOutput.sampleWeek.objectives" :key="obj">
                <li class="flex items-start gap-2 text-sm text-slate-600">
                  <svg class="w-4 h-4 text-primary-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span x-text="obj"></span>
                </li>
              </template>
            </ul>
          </div>

          <!-- Activities Timeline -->
          <div class="card p-6">
            <h4 class="font-semibold text-slate-900 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
              </svg>
              Activities
            </h4>
            <div class="space-y-3">
              <template x-for="activity in $store.app.synthesisOutput.sampleWeek.activities" :key="activity.description">
                <div class="flex items-start gap-3 p-3 bg-slate-50 rounded-lg">
                  <div class="flex-shrink-0">
                    <span class="badge"
                          :class="{
                            'badge-blue': activity.kolbPhase === 'experience',
                            'badge-green': activity.kolbPhase === 'reflection',
                            'badge-purple': activity.kolbPhase === 'conceptualization',
                            'badge-amber': activity.kolbPhase === 'experimentation'
                          }"
                          x-text="$store.app.getKolbPhaseName(activity.kolbPhase)">
                    </span>
                  </div>
                  <div class="flex-1">
                    <p class="text-sm text-slate-700" x-text="activity.description"></p>
                  </div>
                  <div class="flex-shrink-0 text-sm text-slate-500" x-text="activity.hours + ' hr'"></div>
                </div>
              </template>
            </div>
          </div>
        </div>

        <!-- Right Column -->
        <div class="space-y-6">
          <!-- Deliverables -->
          <div class="card p-6">
            <h4 class="font-semibold text-slate-900 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Deliverables Due
            </h4>
            <ul class="space-y-2">
              <template x-for="del in $store.app.synthesisOutput.sampleWeek.deliverables" :key="del">
                <li class="flex items-center gap-2 p-3 bg-amber-50 rounded-lg border border-amber-100">
                  <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="text-sm text-amber-900" x-text="del"></span>
                </li>
              </template>
            </ul>
          </div>

          <!-- DEAL Reflection -->
          <div class="card p-6 bg-violet-50 border-violet-200">
            <h4 class="font-semibold text-violet-900 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-violet-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
              </svg>
              DEAL Reflection Prompts
            </h4>
            <div class="space-y-4">
              <div>
                <div class="text-sm font-semibold text-violet-800 mb-1">Describe</div>
                <p class="text-sm text-violet-700" x-text="$store.app.synthesisOutput.sampleWeek.dealReflection?.describe"></p>
              </div>
              <div>
                <div class="text-sm font-semibold text-violet-800 mb-1">Examine</div>
                <p class="text-sm text-violet-700" x-text="$store.app.synthesisOutput.sampleWeek.dealReflection?.examine"></p>
              </div>
              <div>
                <div class="text-sm font-semibold text-violet-800 mb-1">Articulate Learning</div>
                <p class="text-sm text-violet-700" x-text="$store.app.synthesisOutput.sampleWeek.dealReflection?.articulate"></p>
              </div>
            </div>
          </div>

          <!-- Competency Focus -->
          <div class="card p-6">
            <h4 class="font-semibold text-slate-900 mb-4">Competency Focus</h4>
            <div class="space-y-2">
              <div class="flex items-center gap-2">
                <span class="text-sm text-slate-500">Primary:</span>
                <span class="badge badge-blue" x-text="$store.app.getNaceCompetencyName($store.app.synthesisOutput.sampleWeek.naceCompetencyFocus?.primary)"></span>
              </div>
              <div class="flex items-center gap-2">
                <span class="text-sm text-slate-500">Secondary:</span>
                <span class="badge bg-slate-100 text-slate-700" x-text="$store.app.getNaceCompetencyName($store.app.synthesisOutput.sampleWeek.naceCompetencyFocus?.secondary)"></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </template>
</div>
