<div class="bg-white border-t border-slate-200 sticky bottom-0 z-40" x-show="$store.app.currentStep !== 'synthesizing'">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <div class="flex items-center justify-between">
      <!-- Back button -->
      <button
        @click="$store.app.prevStep()"
        x-show="$store.app.currentStep !== 'framework'"
        class="btn-secondary">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back
      </button>
      <div x-show="$store.app.currentStep === 'framework'"></div>

      <!-- Continue/Synthesize button -->
      <button
        @click="$store.app.nextStep()"
        class="btn-primary">
        <span x-text="$store.app.currentStep === 'student' ? 'Generate Learning Experience' : 'Continue'"></span>
        <svg x-show="$store.app.currentStep !== 'student'" class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <svg x-show="$store.app.currentStep === 'student'" class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </button>
    </div>
  </div>
</div>
