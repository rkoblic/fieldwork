<div>
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-slate-900 mb-2">Student Profile</h1>
    <p class="text-slate-600">Individual learner information that enables personalized experience design.</p>
  </div>

  <!-- Demo Mode Switcher -->
  <div x-show="$store.app.mode === 'demo'" class="mb-6">
    <label class="label">Select Student</label>
    <div class="flex gap-2">
      <template x-for="stu in $store.app.students" :key="stu.id">
        <button
          @click="$store.app.selectedStudent = stu.id"
          class="px-4 py-2 rounded-lg text-sm font-medium transition-colors"
          :class="$store.app.selectedStudent === stu.id ? 'bg-primary-600 text-white' : 'bg-slate-100 text-slate-700 hover:bg-slate-200'"
          x-text="stu.name">
        </button>
      </template>
    </div>
  </div>

  <!-- Custom Mode Template Selector -->
  <div x-show="$store.app.mode === 'custom'" class="mb-6">
    <label class="label">Start from template (optional)</label>
    <div class="flex flex-wrap gap-2">
      <template x-for="stu in $store.app.students" :key="stu.id">
        <button
          @click="$store.app.useAsTemplate('student', stu.id)"
          class="px-4 py-2 rounded-lg text-sm font-medium transition-colors"
          :class="$store.app.customStudent?.name === stu.name
            ? 'bg-primary-600 text-white'
            : 'bg-slate-100 text-slate-700 hover:bg-slate-200'"
          x-text="'Use ' + stu.name">
        </button>
      </template>
      <button
        x-show="$store.app.customStudent?.name"
        @click="$store.app.resetCustomForm('student')"
        class="px-4 py-2 rounded-lg text-sm font-medium bg-slate-50 text-slate-500 hover:bg-slate-100 border border-slate-200 transition-colors">
        Clear Form
      </button>
    </div>
  </div>

  <div class="card p-6">
    <!-- Basic Info -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
      <!-- Full Name -->
      <div>
        <label class="label">Full Name</label>
        <input
          type="text"
          :class="$store.app.mode === 'demo' ? 'input-readonly' : 'input'"
          :readonly="$store.app.mode === 'demo'"
          :value="$store.app.activeStudent?.name"
          placeholder="e.g., Anna Liu"
          @input="$store.app.mode === 'custom' && ($store.app.customStudent.name = $event.target.value)">
      </div>

      <!-- Major Dropdown -->
      <div>
        <label class="label">Major</label>
        <template x-if="$store.app.mode === 'demo'">
          <input
            type="text"
            class="input-readonly"
            readonly
            :value="$store.app.activeStudent?.major">
        </template>
        <template x-if="$store.app.mode === 'custom'">
          <select
            class="input"
            :value="$store.app.customStudent?.major"
            @change="$store.app.customStudent.major = $event.target.value">
            <option value="">Select major...</option>
            <option value="Psychology">Psychology</option>
            <option value="Business Administration">Business Administration</option>
            <option value="Communications">Communications</option>
            <option value="Marketing">Marketing</option>
            <option value="Computer Science">Computer Science</option>
            <option value="Data Science">Data Science</option>
            <option value="Economics">Economics</option>
            <option value="English">English</option>
            <option value="Political Science">Political Science</option>
            <option value="Sociology">Sociology</option>
            <option value="Engineering">Engineering</option>
            <option value="Biology">Biology</option>
            <option value="Environmental Science">Environmental Science</option>
            <option value="Public Health">Public Health</option>
            <option value="Graphic Design">Graphic Design</option>
            <option value="Digital Media">Digital Media</option>
            <option value="Other">Other</option>
          </select>
        </template>
      </div>

      <!-- Minor Dropdown -->
      <div>
        <label class="label">Minor</label>
        <template x-if="$store.app.mode === 'demo'">
          <input
            type="text"
            class="input-readonly"
            readonly
            :value="$store.app.activeStudent?.minor">
        </template>
        <template x-if="$store.app.mode === 'custom'">
          <select
            class="input"
            :value="$store.app.customStudent?.minor"
            @change="$store.app.customStudent.minor = $event.target.value">
            <option value="">None</option>
            <option value="Psychology">Psychology</option>
            <option value="Business Administration">Business Administration</option>
            <option value="Communications">Communications</option>
            <option value="Marketing">Marketing</option>
            <option value="Computer Science">Computer Science</option>
            <option value="Data Science">Data Science</option>
            <option value="Economics">Economics</option>
            <option value="English">English</option>
            <option value="Political Science">Political Science</option>
            <option value="Sociology">Sociology</option>
            <option value="Engineering">Engineering</option>
            <option value="Biology">Biology</option>
            <option value="Environmental Science">Environmental Science</option>
            <option value="Public Health">Public Health</option>
            <option value="Graphic Design">Graphic Design</option>
            <option value="Digital Media">Digital Media</option>
            <option value="Other">Other</option>
          </select>
        </template>
      </div>

      <!-- Year Dropdown -->
      <div>
        <label class="label">Year</label>
        <template x-if="$store.app.mode === 'demo'">
          <input
            type="text"
            class="input-readonly"
            readonly
            :value="$store.app.activeStudent?.year">
        </template>
        <template x-if="$store.app.mode === 'custom'">
          <select
            class="input"
            :value="$store.app.customStudent?.year"
            @change="$store.app.customStudent.year = $event.target.value">
            <option value="">Select year...</option>
            <option value="Freshman">Freshman</option>
            <option value="Sophomore">Sophomore</option>
            <option value="Junior">Junior</option>
            <option value="Senior">Senior</option>
          </select>
        </template>
      </div>
    </div>

    <!-- Resume Upload & Extracted Skills -->
    <div class="mb-6">
      <label class="label">Resume</label>

      <!-- Demo Mode: Display only -->
      <template x-if="$store.app.mode === 'demo'">
        <div>
          <div class="flex items-center gap-3 p-3 bg-slate-50 rounded-lg border border-slate-200 mb-3">
            <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="font-medium text-slate-900 text-sm" x-text="$store.app.activeStudent?.resumeFileName"></div>
              <div class="text-xs text-slate-500">Uploaded resume</div>
            </div>
            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <label class="label text-slate-500 font-normal">Extracted Skills</label>
          <div class="flex flex-wrap gap-2">
            <template x-for="skill in $store.app.activeStudent?.extractedSkills" :key="skill">
              <span class="badge bg-slate-100 text-slate-700" x-text="skill"></span>
            </template>
          </div>
        </div>
      </template>

      <!-- Custom Mode: File upload -->
      <template x-if="$store.app.mode === 'custom'">
        <div>
          <!-- Upload area -->
          <div
            x-show="!$store.app.customStudent?.resumeFileName"
            class="border-2 border-dashed border-slate-300 rounded-lg p-6 text-center hover:border-primary-400 transition-colors">
            <div class="w-12 h-12 bg-slate-100 rounded-lg flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
              </svg>
            </div>
            <p class="text-sm text-slate-600 mb-2">Upload resume to extract skills</p>
            <p class="text-xs text-slate-400 mb-3">PDF, DOC, or DOCX (max 5MB)</p>
            <label class="inline-flex items-center gap-2 px-4 py-2 bg-primary-600 text-white rounded-lg text-sm font-medium cursor-pointer hover:bg-primary-700 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
              </svg>
              <span>Choose File</span>
              <input
                type="file"
                class="hidden"
                accept=".pdf,.doc,.docx"
                x-ref="resumeInput"
                @change="$store.app.uploadResume($event.target.files[0]); $event.target.value = ''">
            </label>
          </div>

          <!-- Uploading state -->
          <div
            x-show="$store.app.resumeUploading"
            class="flex items-center gap-3 p-4 bg-primary-50 rounded-lg border border-primary-200">
            <svg class="w-5 h-5 text-primary-600 animate-spin" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span class="text-sm text-primary-700">Analyzing resume and extracting skills...</span>
          </div>

          <!-- Error state -->
          <div
            x-show="$store.app.resumeError"
            class="flex items-center gap-3 p-4 bg-red-50 rounded-lg border border-red-200 mb-3">
            <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm text-red-700" x-text="$store.app.resumeError"></span>
            <button @click="$store.app.resumeError = null" class="ml-auto text-red-400 hover:text-red-600">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>

          <!-- Uploaded file display -->
          <div
            x-show="$store.app.customStudent?.resumeFileName && !$store.app.resumeUploading"
            class="flex items-center gap-3 p-3 bg-slate-50 rounded-lg border border-slate-200 mb-3">
            <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="font-medium text-slate-900 text-sm" x-text="$store.app.customStudent?.resumeFileName"></div>
              <div class="text-xs text-slate-500">Resume uploaded</div>
            </div>
            <button
              @click="$store.app.clearResume()"
              class="p-1 text-slate-400 hover:text-red-500 transition-colors"
              title="Remove resume">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>

          <!-- Extracted Skills (editable) -->
          <div x-show="$store.app.customStudent?.extractedSkills?.length > 0 || $store.app.customStudent?.resumeFileName">
            <label class="label text-slate-500 font-normal">Extracted Skills <span class="text-xs">(click to remove, type to add)</span></label>
            <div class="flex flex-wrap gap-2 mb-2">
              <template x-for="(skill, index) in $store.app.customStudent?.extractedSkills || []" :key="index">
                <span
                  class="badge bg-primary-100 text-primary-700 cursor-pointer hover:bg-red-100 hover:text-red-700 transition-colors group"
                  @click="$store.app.removeSkill(index)"
                  :title="'Click to remove: ' + skill">
                  <span x-text="skill"></span>
                  <svg class="w-3 h-3 ml-1 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </span>
              </template>
            </div>
            <!-- Add skill input -->
            <div class="flex gap-2">
              <input
                type="text"
                class="input flex-1 text-sm"
                placeholder="Add a skill..."
                x-ref="newSkillInput"
                @keydown.enter.prevent="$store.app.addSkill($refs.newSkillInput.value); $refs.newSkillInput.value = ''">
              <button
                type="button"
                class="px-3 py-2 bg-slate-100 text-slate-600 rounded-lg text-sm hover:bg-slate-200 transition-colors"
                @click="$store.app.addSkill($refs.newSkillInput.value); $refs.newSkillInput.value = ''">
                Add
              </button>
            </div>
          </div>
        </div>
      </template>
    </div>

    <!-- Relevant Coursework Multi-Select -->
    <div class="mb-6">
      <label class="label">Relevant Coursework</label>

      <!-- Demo Mode: Display only -->
      <template x-if="$store.app.mode === 'demo'">
        <div class="flex flex-wrap gap-2">
          <template x-for="course in $store.app.activeStudent?.relevantCoursework || []" :key="course">
            <span class="badge bg-slate-100 text-slate-700" x-text="course"></span>
          </template>
        </div>
      </template>

      <!-- Custom Mode: Multi-select checkboxes -->
      <template x-if="$store.app.mode === 'custom'">
        <div>
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-2">
            <template x-for="course in $store.app.courseworkOptions" :key="course">
              <label
                class="flex items-center gap-2 p-3 rounded-lg border cursor-pointer transition-colors"
                :class="($store.app.customStudent?.relevantCoursework || []).includes(course)
                  ? 'bg-primary-50 border-primary-300 text-primary-700'
                  : 'bg-white border-slate-200 text-slate-700 hover:border-slate-300'">
                <input
                  type="checkbox"
                  class="w-4 h-4 text-primary-600 border-slate-300 rounded focus:ring-primary-500"
                  :checked="($store.app.customStudent?.relevantCoursework || []).includes(course)"
                  @change="$store.app.toggleCoursework(course)">
                <span class="text-sm" x-text="course"></span>
              </label>
            </template>
          </div>
          <p class="text-xs text-slate-500 mt-2">Select all courses relevant to the project work</p>
        </div>
      </template>
    </div>

    <!-- Learning Goals -->
    <div class="mb-6">
      <label class="label">What do you hope to learn or accomplish?</label>
      <template x-if="$store.app.mode === 'demo'">
        <textarea
          rows="4"
          class="input-readonly"
          readonly
          x-text="$store.app.activeStudent?.learningGoalsNarrative"></textarea>
      </template>
      <template x-if="$store.app.mode === 'custom'">
        <textarea
          rows="4"
          class="input"
          :value="$store.app.customStudent?.learningGoalsNarrative"
          @input="$store.app.customStudent.learningGoalsNarrative = $event.target.value"
          placeholder="What do you hope to learn? Examples:
- Develop stronger presentation skills
- See how organizations use data in practice
- Build confidence with senior professionals
- Apply classroom concepts in real settings"></textarea>
      </template>
    </div>

    <!-- Career Interests -->
    <div>
      <label class="label">What careers or roles interest you?</label>
      <template x-if="$store.app.mode === 'demo'">
        <textarea
          rows="3"
          class="input-readonly"
          readonly
          x-text="$store.app.activeStudent?.careerInterestsNarrative"></textarea>
      </template>
      <template x-if="$store.app.mode === 'custom'">
        <textarea
          rows="3"
          class="input"
          :value="$store.app.customStudent?.careerInterestsNarrative"
          @input="$store.app.customStudent.careerInterestsNarrative = $event.target.value"
          placeholder="What careers interest you? Examples:
- Corporate communications or PR
- Market research and consumer insights
- Organizational consulting
- Product management
- Data analytics"></textarea>
      </template>
    </div>
  </div>

  <!-- Synthesis Preview -->
  <div class="mt-6 p-4 bg-gradient-to-r from-primary-50 to-violet-50 rounded-xl border border-primary-100">
    <div class="flex items-start gap-4">
      <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center flex-shrink-0 shadow-sm">
        <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>
      <div>
        <h3 class="font-semibold text-slate-900 mb-1">Ready to Synthesize</h3>
        <p class="text-sm text-slate-600">
          Click "Generate Learning Experience" to create a personalized curriculum for
          <span class="font-medium" x-text="$store.app.activeStudent?.name"></span>
          working on
          <span class="font-medium" x-text="$store.app.activeEmployer?.projectTitle"></span>
          at
          <span class="font-medium" x-text="$store.app.activeInstitution?.name"></span>.
        </p>
      </div>
    </div>
  </div>
</div>
